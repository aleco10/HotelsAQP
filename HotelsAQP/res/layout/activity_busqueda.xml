<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hotelsaqp.Busqueda" 
    android:background="@drawable/fondo">
    
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
		    android:paddingTop="@dimen/activity_vertical_margin" >

		    <ImageView
		        android:id="@+id/Hotel0"
		        android:layout_width="100dp"
		        android:layout_height="100dp"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentTop="true"
		        android:src="@drawable/tierra_viva"
		        android:onClick="Enlaza"
		         />
		
		    <ImageView
		        android:id="@+id/Hotel2"
		        android:layout_width="100dp"
		        android:layout_height="100dp"
		        android:layout_alignLeft="@+id/Hotel1"
		        android:layout_below="@+id/Hotel1"
		        android:src="@drawable/ic_launcher"
		        android:layout_alignParentLeft="true" />
		
		    <ImageView
		        android:id="@+id/Hotel3"
		        android:layout_width="100dp"
		        android:layout_height="100dp"
		        android:layout_alignLeft="@+id/Hotel2"
		        android:layout_below="@+id/Hotel2"
		        android:src="@drawable/ic_launcher"
		        android:layout_alignParentLeft="true" />
		
		    <ImageView
		        android:id="@+id/Hotel1"
		        android:layout_width="100dp"
		        android:layout_height="100dp"
		        android:layout_alignLeft="@+id/Hotel0"
		        android:layout_below="@+id/Hotel0"
		        android:src="@drawable/ic_launcher"
		        android:layout_alignParentLeft="true" />
		    
		    <ImageView
		        android:id="@+id/Hotel4"
		        android:layout_width="100dp"
		        android:layout_height="100dp"
		        android:layout_alignLeft="@+id/Hotel3"
		        android:layout_below="@+id/Hotel3"
		        android:src="@drawable/ic_launcher"
		        android:layout_alignParentLeft="true" />
		    
		    <ImageView
		        android:id="@+id/Hotel5"
		        android:layout_width="100dp"
		        android:layout_height="100dp"
		        android:layout_alignLeft="@+id/Hotel4"
		        android:layout_below="@+id/Hotel4"
		        android:src="@drawable/ic_launcher"
		        android:layout_alignParentLeft="true" />
		    
		    <ImageView
		        android:id="@+id/Hotel6"
		        android:layout_width="100dp"
		        android:layout_height="100dp"
		        android:layout_alignLeft="@+id/Hotel5"
		        android:layout_below="@+id/Hotel5"
		        android:src="@drawable/ic_launcher"
		        android:layout_alignParentLeft="true" />
		    
		    <ImageView
		        android:id="@+id/Hotel7"
		        android:layout_width="100dp"
		        android:layout_height="100dp"
		        android:layout_alignLeft="@+id/Hotel6"
		        android:layout_below="@+id/Hotel6"
		        android:src="@drawable/ic_launcher"
		        android:layout_alignParentLeft="true" />
		    
		    <TextView
		        android:id="@+id/TextView02"
		        android:layout_width="150dp"
		        android:layout_height="100dp"
		        android:layout_above="@+id/Hotel2"
		        android:layout_alignLeft="@+id/textView2"
		        android:layout_alignParentRight="true"
		        android:text="hotel1"
		        android:textSize="25sp"
		        android:textStyle="bold" />
		
		    <TextView
		        android:id="@+id/TextView01"
		        android:layout_width="150dp"
		        android:layout_height="100dp"
		        android:layout_above="@+id/Hotel3"
		        android:layout_alignLeft="@+id/TextView02"
		        android:layout_alignParentRight="true"
		        android:layout_marginTop="15dp"
		        android:text="hotel2"
		        android:textSize="25sp"
		        android:textStyle="bold" />
		
		    <TextView
		        android:id="@+id/TextView03"
		        android:layout_width="150dp"
		        android:layout_height="100dp"
		        android:layout_alignLeft="@+id/TextView01"
		        android:layout_alignParentRight="true"
		        android:layout_alignTop="@+id/Hotel3"
		        android:text="Hotel3"
		        android:textSize="25sp"
		        android:textStyle="bold" />

		    <TextView
		        android:id="@+id/textView2"
		        android:layout_width="150dp"
		        android:layout_height="100dp"
		        android:layout_alignParentRight="true"
		        android:layout_alignTop="@+id/Hotel0"
		        android:layout_toRightOf="@+id/Hotel0"
		        android:gravity="center_horizontal"
		        android:text="Hotel Tierra Viva Arequipa"
		        android:textAlignment="center"
		        android:textSize="20sp"
		        android:textStyle="bold" />
		    
		    <TextView
		        android:id="@+id/TextView04"
		        android:layout_width="150dp"
		        android:layout_height="100dp"
		        android:layout_alignLeft="@+id/TextView03"
		        android:layout_alignParentRight="true"
		        android:layout_alignTop="@+id/Hotel4"
		        android:text="Hotel3"
		        android:textSize="25sp"
		        android:textStyle="bold" />
		    
		    <TextView
		        android:id="@+id/TextView05"
		        android:layout_width="150dp"
		        android:layout_height="100dp"
		        android:layout_alignLeft="@+id/TextView04"
		        android:layout_alignParentRight="true"
		        android:layout_alignTop="@+id/Hotel5"
		        android:text="Hotel3"
		        android:textSize="25sp"
		        android:textStyle="bold" />
		    
		    <TextView
		        android:id="@+id/TextView06"
		        android:layout_width="150dp"
		        android:layout_height="100dp"
		        android:layout_alignLeft="@+id/TextView05"
		        android:layout_alignParentRight="true"
		        android:layout_alignTop="@+id/Hotel6"
		        android:text="Hotel3"
		        android:textSize="25sp"
		        android:textStyle="bold" />
		    
		    <TextView
		        android:id="@+id/TextView07"
		        android:layout_width="150dp"
		        android:layout_height="100dp"
		        android:layout_alignLeft="@+id/TextView06"
		        android:layout_alignParentRight="true"
		        android:layout_alignTop="@+id/Hotel7"
		        android:text="Hotel3"
		        android:textSize="25sp"
		        android:textStyle="bold" />

        </RelativeLayout>
    
    </ScrollView>

</RelativeLayout>